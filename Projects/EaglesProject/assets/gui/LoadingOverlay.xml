<Overlay name="LoadingOverlay">
  <GUIImage name="BackGround"  pos="0" Dock="Fill" source="loadingScreen.png">

    <GUIImage name="loadingBar"  image="LoadingBar.png">
      <effectors>
        <GUIpercentAnchorEffector anchor="Anchor_UL" offset="0.0,0.72"/>
        <GUIPercentSizeEffector constrain="1,1" percent="1,0.25"/>
      </effectors>
    </GUIImage>

    <GUIStaticText caption="L O A D I N G . . ." size="400,40" DrawBG="false" >
      <font Alignment="TopLeft" size="20" color="255,255,255,255" hasShadow="true" shadowOffset="2" />
      <effectors>
        <GUIpercentAnchorEffector anchor="Anchor_UL" offset="0.19,0.83"/>
      </effectors>
    </GUIStaticText>


    <GUIDummy name="loadingCircle">
      <effectors>
        <GUIpercentAnchorEffector anchor="Anchor_UL" offset="0.125,0.85"/>
      </effectors>
      <children>
        <GUIRotateImage BackColor="255,255,0,255" size="100"  source="circle_0.png" angleSpeed="-80"/>
        <GUIRotateImage BackColor="255,255,0,255" size="100"  source="circle_1.png" angleSpeed="80"/>
        <GUIRotateImage BackColor="255,255,0,255" size="100"  source="circle_3.png" angleSpeed="160"/>
      </children>
    </GUIDummy>

  </GUIImage>
</Overlay>
